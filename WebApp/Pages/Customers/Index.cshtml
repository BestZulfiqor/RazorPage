@page
@model WebApp.Pages.Customers.Index

<div class="container mt-5" style="max-width: 800px;">
    <div class="card p-4 shadow-sm">
        <h2 class="mb-4 fw-bold text-center">Список клиентов</h2>

        <div class="mb-3 text-end">
            <a asp-page="./Create" class="btn btn-success">Создать клиента</a>
        </div>

        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Имя и фамилия</th>
                    <th>Телефон</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.FullName</td>
                        <td>@customer.Phone</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-primary me-2">Ред.</a>
                            <a asp-page="./Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger">Удал.</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
