@page "{id:int}"
@model Pages.Customers.Edit

<h2 class="mb-4 fw-bold text-center">Обновление информации клиента</h2>

<form method="post">
    <input type="hidden" asp-for="Customer.Id" />
    <div class="form-group mb-3">
        <label asp-for="Customer.FullName" class="control-lable">Full name</label>
        <input type="text" asp-for="Customer.FullName" class="form-control">
        <span asp-validation-for="Customer.FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Customer.Phone" class="control-lable">Phone</label>
        <input type="text" asp-for="Customer.Phone" class="form-control">
        <span asp-validation-for="Customer.Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
</form>