@page "{id:int}"
@model Pages.Tables.Edit

<h2 class="mb-4 fw-bold text-center">Обновление столика</h2>

<form method="post">
    <input type="hidden" asp-for="Table.Id" />
    <div class="form-group mb-3">
        <label asp-for="Table.Number" class="control-lable">Number</label>
        <input type="text" asp-for="Table.Number" class="form-control">
        <span asp-validation-for="Table.Number" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Table.Seats" class="control-lable">Seats</label>
        <input type="text" asp-for="Table.Seats" class="form-control">
        <span asp-validation-for="Table.Seats" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
</form>