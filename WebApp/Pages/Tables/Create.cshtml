@page
@model Pages.Tables.Create
<h2>Создание столика</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Tables.Number" class="control-label">Номер столика</label>
        <input asp-for="Tables.Number" class="form-control" min="0">
        <span asp-validation-for="Tables.Number" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="Tables.Seats" class="control-label">Количества мест</label>
        <input asp-for="Tables.Seats" class="form-control" min="0">
        <span asp-validation-for="Tables.Seats" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Создать столик</button>
</form>