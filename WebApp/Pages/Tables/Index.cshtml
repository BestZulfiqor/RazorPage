@page
@model Pages.Tables.Index

<div class="container mt-5" style="max-width: 800px;">
    <div class="card p-4 shadow-sm">
        <h2 class="mb-4 fw-bold text-center">Список столиков</h2>

        <div class="mb-3 text-end">
            <a asp-page="./Create" class="btn btn-success">Создать столик</a>
        </div>

        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Номер столика</th>
                    <th>Количество мест</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var table in Model.Tables)
            {
                <tr>
                    <td>@table.Number</td>
                    <td>@table.Seats</td>
                    <td>@(table.IsReserved ? "Занят" : "Свободен")</td>
                    <td>
                        @if (!table.IsReserved)
                        {
                            <a href="/reservations/create/@table.Id" class="btn btn-primary">Забронировать</a>
                        }
                        else
                        {
                            <span>Невозможно забронировать</span>
                        }
                        <a asp-page="./Edit" asp-route-id="@table.Id" class="btn btn-sm btn-primary me-2">Ред.</a>
                        <a asp-page="./Delete" asp-route-id="@table.Id" class="btn btn-sm btn-danger">Удал.</a>
                    </td>
                </tr>
            }
    </tbody>
        </table>
    </div>
</div>
